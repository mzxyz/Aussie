{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["/src/screens/*"],
      "@components/*": ["/src/components/*"],
      "@navigations/*": ["/src/navigations/*"],
      "@utils/*": ["/src/utils/*"],
      "@types/*": ["/src/types/*"],
      "@hooks/*": ["/src/hooks/*"],
      "@stores/*": ["/src/stores/*"],
      "@api/*": ["/src/api/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
}
