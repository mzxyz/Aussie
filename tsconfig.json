{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "screens/*": ["./src/screens/*"],
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "utils/*": ["./src/utils/*"],
      "services/*": ["./src/services/*"],
      "types/*": ["./src/types/*"],
      "hooks/*": ["./src/hooks/*"],
      "stores/*": ["src/stores/*"],
      "theme/*": ["./src/theme/*"],
      "api/*": ["./src/api/*"],
      "config/*": ["./src/config/*"],
      "@env": ["./src/types/env.d.ts"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
}
